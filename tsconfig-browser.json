{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "declaration": true,
    "outFile": "./lib/browser/facebook-conceal.bundle.js",  
    "rootDir": "./src/browser",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/browser/**/*.ts"],
  "exclude": ["node_modules", "test", "**/__tests__/*"]
}
